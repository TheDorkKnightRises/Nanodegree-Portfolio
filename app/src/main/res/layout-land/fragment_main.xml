<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="thedorkknightrises.portfolio.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textAlignment="center" />

    <Button
        style="@style/Button"
        android:text="@string/btn1"
        android:id="@+id/btn1"
        android:layout_below="@id/textView"
        android:layout_alignRight="@id/textView"
        android:layout_alignEnd="@id/textView"
        android:layout_marginTop="16dp"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="116dp"
        android:onClick="onBtn1Click" />

    <Button
        style="@style/Button"
        android:text="@string/btn2"
        android:id="@+id/btn2"
        android:layout_below="@id/btn1"
        android:layout_alignLeft="@id/btn1"
        android:layout_alignStart="@id/btn1"
        android:layout_alignRight="@id/btn1"
        android:layout_alignEnd="@id/btn1"
        android:onClick="onBtnClick" />

    <Button
        style="@style/Button"
        android:text="@string/btn3"
        android:id="@+id/btn3"
        android:layout_below="@id/btn2"
        android:layout_alignLeft="@id/btn2"
        android:layout_alignStart="@id/btn2"
        android:layout_alignRight="@id/btn2"
        android:layout_alignEnd="@id/btn2"
        android:onClick="onBtnClick" />

    <Button
        style="@style/Button"
        android:text="@string/btn4"
        android:id="@+id/btn4"
        android:layout_alignTop="@id/btn1"
        android:layout_toRightOf="@id/btn2"
        android:layout_toEndOf="@id/btn2"
        android:layout_marginLeft="4dp"
        android:onClick="onBtnClick" />

    <Button
        style="@style/Button"
        android:text="@string/btn5"
        android:id="@+id/btn5"
        android:layout_below="@id/btn4"
        android:layout_alignLeft="@id/btn4"
        android:layout_alignStart="@id/btn4"
        android:layout_alignRight="@id/btn4"
        android:onClick="onBtnClick" />

    <Button
        style="@style/Button"
        android:text="@string/btn6"
        android:id="@+id/btn6"
        android:layout_below="@id/btn5"
        android:layout_alignLeft="@id/btn5"
        android:layout_alignStart="@id/btn5"
        android:layout_alignRight="@id/btn5"
        android:layout_alignEnd="@id/btn5"
        android:onClick="onBtnClick" />

</RelativeLayout>
